<div class="container">
  <div class="data-form">
      <div class="container">
          <form action="<%=`/programs/${program._id}/update?_method=PUT`%>" method="post" class="fs-2">
              <h2>Edit Program:</h2>
              <div class="mb-3">
                  <label for="name" class="form-label">Name</label>
                  <input type="text" class="form-control fs-3" name="name" id="name" placeholder="Name" 
                  value="<%= program.name %>" required />
              </div>
              <div class="mb-3">
                  <label for="description" class="form-label">Description</label>
                  <input type="text" class="form-control fs-3" name="description" id="description" placeholder="Description" 
                  value="<%= program.description %>" required />
              </div>
              <div class="mb-3">
                  <label for="schedule" class="form-label">Schedule</label>
                  <input type="text" class="form-control fs-3" name="schedule" id="schedule" placeholder="Schedule" 
                  value="<%= program.schedule %>" required />
              </div>
              <div class="mb-3">
                <label for="instructor" class="form-label">Instructor</label>
                <input type="text" class="form-control fs-3" name="instructor" id="instructor" placeholder="Instructor" 
                value="<%= program.instructor %>" required />
            </div>
              <button type="submit" class="btn btn-primary fs-3 mb-3">Submit</button>
          </form>
      </div>
  </div>
</div>
