<div class="container my-3 fs-3">
  <h2>Programs</h2>
  <div class="row">
      <% programs.forEach(program => { %>
          <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
              <div class="card h-100">
                  <div class="card-body">
                      <h2 class="card-title"><%= program.name %></h2>
                      <p class="card-text"><strong>Description: </strong><%= program.description %></p>
                      <p class="card-text"><strong>Schedule: </strong><%= program.schedule %></p>
                      <p class="card-text"><strong>Instructor: </strong><%= program.instructor %></p>
                  </div>
                  <div class="card-footer d-flex justify-content-center">
                      <% if (currentUser && currentUser.isAdmin) { %> 
                          <a href="<%=`/programs/${program._id}/edit` %>"
                            class="btn btn-lg btn-warning me-2"
                            > Edit </a>
                          <a
                          href="<%= `/programs/${program._id}/delete?_method=DELETE` %>"
                          onclick="return confirm('Are you sure you want to delete this record?')"
                          class="btn btn-lg btn-danger me-2"
                          >Delete</a>
                      <% } %>
                  </div>
              </div>
          </div>
      <% }); %>
      <div>
          <% if (currentUser && currentUser.isAdmin) {%>
              <a href="/programs/new" class="btn btn-lg btn-success">Add A Program</a>
          <% }; %>
      </div>
  </div>
</div>
