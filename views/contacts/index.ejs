<div class="container my-3 fs-3">
    <h2>Contacts Table</h2>
    <div class="row">
        <% contacts.forEach(contact => { %>
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h2 class="card-title"><a href="<%= `/contacts/${contact._id}` %>">
                            <%= contact.name %>
                        </a></h5>
                        <h3 class="card-subtitle mb-2 text-muted">
                            <%= contact.email %>
                        </h6>
                        <p class="card-text"><strong>Title: </strong><%= contact.title %></p>
                        <p class="card-text"><strong>Issue: </strong><%= contact.issue %></p>
                    </div>
                    <div class="card-footer">
                        <a href="<%=`/contacts/${contact._id}/edit` %>" class="btn btn-primary btn-lg">Edit</a>
                        <a href="<%= `contacts/${contact._id}/delete?_method=DELETE` %>"
                            onclick="return confirm('Are you sure you want to delete this record?')" class="btn btn-danger btn-lg">Delete</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
    <div class="my-3">
        <a href="/contacts/new" class="mx-1"><button type="button" class="btn btn-primary btn-lg">Add new contact</button></a>
    </div>
</div>
