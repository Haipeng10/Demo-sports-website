<div class="container">
    <h1 class="my-4">Contact Details for <%= contact.name %></h1>
    <table class="table table-striped table-hover table-responsive-md fs-3">
            <tr>
                <th>Name</th>
                <td>
                    <%= contact.name %>
                </td>
            </tr>
            <tr>
                <th>Email</th>
                <td>
                    <%= contact.email %>
                </td>
            </tr>
            <tr>
                <th>Title</th>
                <td>
                    <%= contact.title %>
                </td>
            </tr>
            <tr>
                <th>Issue</th>
                <td>
                    <%= contact.issue %>
                </td>
            </tr>
        </table>
        <div class="d-flex flex-wrap mt-3">
            <a href="/contacts" class="mx-1 my-1">
                <button type="button" class="btn btn-primary btn-lg">View all contacts</button>
            </a>
            <a href="<%=`/contacts/${contact._id}/edit`%>" class="mx-1 my-1">
                <button type="button" class="btn btn-primary btn-lg">Edit Contact Details</button>
            </a>
            <a href="<%= `/contacts/${contact._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')" class="mx-1 my-1">
                <button type="button" class="btn btn-danger btn-lg">Delete</button>
            </a>
        </div>
    </div>
