<div class="container my-3 fs-3">
    <h2>Users Table</h2>
    <div class="row">
        <% users.forEach(user => { %>
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h2 class="card-title"><a href="<%= `/users/${user._id}` %>">
                            <%= user.name %>
                        </a></h2>
                        <p class="card-text"><strong>Email: </strong><%= user.email %></p>
                    </div>
                    <div class="card-footer">
                        <a href="<%=`/users/${user._id}/edit` %>" class="btn btn-primary btn-lg">Edit</a>
                        <a href="<%= `users/${user._id}/delete?_method=DELETE` %>"
                            onclick="return confirm('Are you sure you want to delete this record?')" class="btn btn-danger btn-lg">Delete</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
    <div class="my-3">
        <a href="/users/new" class="mx-1"><button type="button" class="btn btn-primary btn-lg">Add new user</button></a>
    </div>
</div>