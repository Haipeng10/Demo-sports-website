<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 fs-2">
            <h1 class="my-4">Edit user:</h1>
            <form action="<%=`/users/${user._id}/update?_method=PUT`%>" method="POST">
                <div class="form-group">
                    <label for="inputEmail">Email address</label>
                    <input type="email" name="email" id="inputEmail" class="form-control fs-3" placeholder="Email address" autofocus value="<%= user.email %>" required />
                </div>
                <div class="form-group">
                    <label for="inputEmail">Name</label>
                    <input type="text" name="name" id="name" class="form-control fs-3" placeholder="Name" value="<%= user.name %>" required />
                </div>
                <div class="form-group">
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control fs-3" placeholder="Password" required />
                </div>
                <button type="submit" class="btn btn-primary fs-3 mt-3">Update</button>
            </form>
        </div>
    </div>
</div>
