<div class="container">
    <h1>User Data for <%= user.name %>
    </h1>
    <table class="table table-striped table-hover table-responsive fs-3">
        <tr>
            <th>Name</th>
            <td>
                <%= user.name %>
            </td>
        </tr>
        <tr>
            <th>Email</th>
            <td>
                <%= user.email %>
            </td>
        </tr>
    </table>
    <div class="container ms-1">
        <a href="/users" class="mx-1"><button type="button" class="btn btn-primary btn-lg">View all users</button></a>
        <a href="<%=`/users/${user._id}/edit`%>" class="mx-1"><button type="button" class="btn btn-primary btn-lg">Edit
                User
                Details</button></a>
        <a href="<%= `/users/${user._id}/delete?_method=DELETE` %>"
            onclick="return confirm('Are you sure you want to delete this record?')" class="mx-1"><button type="button"
                class="btn btn-danger btn-lg">Delete</button></a>
    </div>
</div>