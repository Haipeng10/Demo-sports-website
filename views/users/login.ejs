<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 fs-2">
            <h1 class="my-4">Login:</h1>
            <form action="/users/login" method="POST">
                <div class="form-group">
                    <label for="inputEmail">Email address</label>
                    <input type="email" name="email" id="inputEmail" class="form-control fs-3" placeholder="Email address" required />
                </div>
                <div class="form-group">
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control fs-3" placeholder="Password" required />
                </div>
                <button type="submit" class="btn btn-primary btn-lg mt-3">Login</button>
            </form>
            <a href="/users/new" class="mt-3"><button type="button" class="btn btn-primary btn-lg">Create an account</button></a>
        </div>
    </div>
</div>
