<div class="container my-3 fs-3">
    <h2>Events</h2>
    <div class="row">
        <% events.forEach(event => { %>
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h2 class="card-title"><%= event.name %></h2>
                        <p class="card-text"><strong>Description: </strong><%= event.description %></p>
                        <p class="card-text"><strong>Date: </strong><%= event.date %></p>
                        <p class="card-text"><strong>Location: </strong><%= event.location %></p>
                    </div>
                    <div class="card-footer d-flex justify-content-center">
                        <% if (currentUser && currentUser.isAdmin) { %> 
                            <a href="<%=`/events/${event._id}/edit` %>"
                              class="btn btn-lg btn-warning me-2"
                              > Edit </a>
                            <a
                            href="<%= `/events/${event._id}/delete?_method=DELETE` %>"
                            onclick="return confirm('Are you sure you want to delete this record?')"
                            class="btn btn-lg btn-danger me-2"
                            >Delete</a>
                        <% } %>
                    </div>
                </div>
            </div>
        <% }); %>
        <div>
            <% if (currentUser && currentUser.isAdmin) {%>
                <a href="/events/new" class="btn btn-lg btn-success">Add an Event</a>
            <% }; %>
        </div>
    </div>
  </div>
  