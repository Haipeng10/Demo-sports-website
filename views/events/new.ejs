      <input type="text" name="name" id="inputName" placeholder="Name" required autofocus/>
      <br>

      <label for="inputType" required>Description</label>
      <input type="text" name="description" id="inputType" placeholder="Type" required/>
      <br>
      
      <label for="inputDate">Date</label>
      <input type="date" name="date" id="inputDate" placeholder="Date" required/>
      <br>
      
      <label for="inputLocation">Location</label>
      <input type="text" name="location" id="inputLocation" placeholder="Location" required/>
      <br>
      <button type="submit">Create</button>
    </form>
  </div>